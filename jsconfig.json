{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@app": [
                "src/app"
            ],
            "@server": [
                "src/server"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@exceptions/*": [
                "src/exceptions/*"
            ],
            "@libs/*": [
                "src/libs/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@repositories/*": [
                "src/repositories/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@schemas/*": [
                "src/schemas/*"
            ],
            "@services/*": [
                "src/services/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}