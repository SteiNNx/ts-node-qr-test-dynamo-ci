{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@app": [
                "app"
            ],
            "@server": [
                "server"
            ],
            "@constants/*": [
                "constants/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@exceptions/*": [
                "exceptions/*"
            ],
            "@libs/*": [
                "libs/*"
            ],
